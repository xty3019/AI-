    <script>
        layui.use(['table', 'form'],function () {
            var table = layui.table;
            var form = layui.form;

            table.render({
                elem: '#demo'
              , url: '/Bank/BindData' //数据接口
              , id: 'testReload'
              , cols: [[ //表头
                  { field: 'BankName', title: '账户名称', width: '10%', align: 'center' }
                , { field: 'OpenAccount', title: '开户名', width: '10%', align: 'center' }
                , { field: 'OpenBank', title: '开户银行', width: '20%', align: 'center' }
                , { field: 'Account', title: '银行账号', width: '20%', sort: true, align: 'center' }
                , { field: 'BankMoney', title: '余额', width: '15%', sort: true, align: 'center', }
                , {
                    field: 'IsStop', title: '是否停用', width: '10%', align: 'center',
                    templet: function (row) {
                        if (row.IsStop == true) {
                            row.IsStop = '否';
                        }
                        if (row.IsStop == false) {
                            row.IsStop = '是';
                        }
                        return row.IsStop;
                    }
                }
               , {
                    title: '操作', width: '15%', align: 'center', toolbar: '#toolbarDemo'
               },
               
              ]]
            , page: {
                theme: '#FFB800',
                layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip'],
            }
            , height: 500
            });

            table.on('tool(test)', function (obj) {
                var data = obj.data;
                if (obj.event === 'del') {
                    layer.alert('您确定删除这条数据吗？', {
                        skin: 'layui-layer-molv' //样式类名 自定义样式
                      , closeBtn: 1 // 是否显示关闭按钮
                      , anim: 1 //动画类型
                      , btn: ['确定', '取消'] //按钮
                      , icon: 6 // icon
                      , yes: function () {
                          $.ajax({
                              type: "post",
                              url: "/Bank/Delete",
                              data: { 'id': data.BankID },
                              datatype: "json",
                              success: function (data) { 
                                  var datas=JSON.parse(data)
                                  if (datas > 0) {
                                      layer.alert('删除成功', { icon: 6, shade: 0.1 })
                                      obj.del();
                                      layer.close(index);
                                  } else {
                                      layer.close(index);
                                      layer.msg('删除失败', { icon: 2, title: '提示' });
                                      return;
                                  }
                              },
                              error: function () {
                              }
                          })
                      }
                    })
                } 

                
                    else if (obj.event === 'edit') {
                        layer.open({
                            type: 2,
                            title: "",
                            area: ['50%', '85%'],
                            content: ['Edit?bid=' + data.BankID, 'on'],
                            shade: 0.5,
                            resize: false,
                            anim: 2,
                            move: false,
                            scrollbr: false,
                            end: function () {
                                    location.reload();

                            }
                        })
                    }
             })

        })
        function AddBtn() {
            //页面层-自定义

            layer.open({
                type: 2,
                title: "添加新账户",
                area: ['50%', '85%'],
                content: ['Add', 'on'],
                shade: 0.5,
                resize: false,
                anim: 2,
                move: false,
                scrollbr: false,
                end: function () {
                    location.reload();
                }

            });
        }


        $("#btnSel").live("click", function () {
            var $name = $("#selname").val();
            var $Selecttype = $("#Isstop").val();
            layui.use('table', function () {
                var table = layui.table;
                table.reload('testReload', {
                    url: "/Bank/BindData",
                    page: 1,
                    where: {
                        name: $name,
                        type: $Selecttype,
                    }
                })
            })

        })

    </script>
